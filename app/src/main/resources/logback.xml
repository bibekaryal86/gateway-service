<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration debug="false">
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
    <import class="ch.qos.logback.core.ConsoleAppender"/>

    <property name="LOG_PATTERN" value="[%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ, America/Denver}][gatewaysvc][%thread][%level][%c{1}] --- %msg%n"/>

    <appender name="STDOUT" class="ConsoleAppender">
        <encoder class="PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="STDOUT_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>256</queueSize> <!-- Optional: default is 256 -->
        <discardingThreshold>0</discardingThreshold> <!-- Optional: discard if queue full -->
        <neverBlock>true</neverBlock> <!-- Optional: avoid blocking application threads -->
        <appender-ref ref="STDOUT" />
    </appender>

    <logger name="io.github.bibekaryal86" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT_ASYNC"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT_ASYNC"/>
    </root>

</configuration>