<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration debug="false">
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
    <import class="ch.qos.logback.core.rolling.RollingFileAppender"/>
    <import class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy"/>
    <import class="ch.qos.logback.classic.filter.ThresholdFilter"/>
    <import class="ch.qos.logback.core.ConsoleAppender"/>

    <property name="LOG_PATTERN" value="[%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ, America/Denver}][gatewaysvc][%thread][%level][%c{1}] --- %msg%n"/>

    <if condition='property("LOG_TO_FILE").equals("TRUE")'>
        <then>
            <appender name="STDOUT" class="ConsoleAppender">
                <filter class="ThresholdFilter">
                    <level>INFO</level>
                </filter>
                <encoder class="PatternLayoutEncoder">
                    <pattern>${LOG_PATTERN}</pattern>
                    <charset>utf8</charset>
                </encoder>
            </appender>

            <appender name="FILELOG" class="RollingFileAppender">
                <file>${REPO_HOME}${LOG_FILE}.log</file>
                <rollingPolicy class="SizeAndTimeBasedRollingPolicy">
                    <fileNamePattern>${REPO_HOME}${LOG_FILE}_%d{yyyy-MM-dd}_%i.log</fileNamePattern>
                    <maxFileSize>1MB</maxFileSize>
                    <maxHistory>14</maxHistory>
                    <totalSizeCap>14MB</totalSizeCap>
                </rollingPolicy>
                <encoder class="PatternLayoutEncoder">
                    <pattern>${LOG_PATTERN}</pattern>
                    <charset>utf8</charset>
                </encoder>
            </appender>

            <logger name="io.github.bibekaryal86" level="INFO" additivity="false">
                <appender-ref ref="STDOUT"/>
                <appender-ref ref="FILELOG"/>
            </logger>

            <logger name="io.netty" level="WARN" additivity="false">
                <appender-ref ref="STDOUT"/>
                <appender-ref ref="FILELOG"/>
            </logger>

            <root level="DEBUG">
                <appender-ref ref="STDOUT"/>
                <appender-ref ref="FILELOG"/>
            </root>
        </then>
        <else>
            <appender name="STDOUT" class="ConsoleAppender">
                <encoder class="PatternLayoutEncoder">
                    <pattern>${LOG_PATTERN}</pattern>
                    <charset>utf8</charset>
                </encoder>
            </appender>

            <logger name="io.github.bibekaryal86" level="INFO" additivity="false">
                <appender-ref ref="STDOUT"/>
            </logger>

            <root level="INFO">
                <appender-ref ref="STDOUT"/>
            </root>
        </else>
    </if>

</configuration>